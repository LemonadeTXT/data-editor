<Page x:Class="data_editor.Pages.PageConnectionString"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:data_editor.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageConnectionString">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBox x:Name="textboxConnString" FontSize="16" Margin="90,0,90,0" TextWrapping="NoWrap" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Margin="0,10,10,0" x:Name="ButtonBack" Content="Back" HorizontalAlignment="Right" VerticalAlignment="Top" Width="80" Click="ButtonBack_Click"/>
            <Button Grid.Column="1" Margin="10,10,0,0" x:Name="buttonAccept" Content="Accept" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ButtonAccept_Click"/>
        </Grid>
    </Grid>
</Page>
